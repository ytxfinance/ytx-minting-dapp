{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true
    },
    "globals": {
        "ethereum": "readonly",
        "web3": "readonly",
        "myWeb3": "readonly"
    },
    "extends": "react-app",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "align-assignments"
      ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "no-var":"error",
        "key-spacing":[
            2,{"align": {
                "beforeColon": true,
                "afterColon": true,
                "on": "colon",
                "mode": "strict"
            }}
        ],
        "space-before-function-paren": [
            "error", "always"
        ],
        "keyword-spacing":[
            "error"
        ],
        "arrow-spacing":"error",
        "space-before-blocks":[
            "error"
        ],
        "align-assignments/align-assignments": [
            2, { "requiresOnly": false } 
        ],
        "space-infix-ops": ["error", { "int32Hint": false }]
        }
}